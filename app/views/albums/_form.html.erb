<%= form_for @form do |f| %>
  <% if @form.errors.any? %>
    <div>
      <h3><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h3>

      <ul>
        <% @form.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title, "Album Title" %>
  <%= f.text_field :title %>

  <%= f.fields_for :songs do |song| %>
    <div class="box">
      <%= song.label :name %>
      <%= song.text_field :name %>

      <div>
        <%= song.fields_for :user do |user| %>
          <%= user.label :first_name %>
          <%= user.text_field :first_name %>
        <% end %>
      </div>

    </div>
  <% end %>

  <%= f.submit %>
<% end %>

<%= link_to "Back to Albums", albums_path, class: 'btn'  %>
